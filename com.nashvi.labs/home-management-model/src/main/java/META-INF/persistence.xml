<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="home-management-model">
		<class>com.nashvi.labs.domain.Address</class>
		<class>com.nashvi.labs.domain.Ledger</class>
		<class>com.nashvi.labs.domain.Transaction</class>
		<class>com.nashvi.labs.domain.User</class>
		
		<properties>
			<property name="hibernate.connection.username" value="nashvi"/>
			<property name="hibernate.connection.password" value="pass"/>
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/nashvi_db"/>
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
		</properties>
	</persistence-unit>
</persistence>
